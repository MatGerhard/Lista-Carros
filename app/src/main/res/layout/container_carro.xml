<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/fotoCarro"
        android:layout_width="190dp"
        android:layout_height="100dp"
        android:src="@drawable/ek9"
        android:layout_margin="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/nomeCarro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Civic EK9"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/darker_gray"
        android:layout_marginStart="230dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toEndOf="@id/fotoCarro"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/motorCarro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Motor: B16B"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/darker_gray"
        android:layout_marginStart="230dp"
        android:layout_marginEnd="10dp"
        android:maxLines="1"
        app:layout_constraintStart_toEndOf="@id/fotoCarro"
        app:layout_constraintTop_toBottomOf="@id/nomeCarro"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/fabricanteCarro"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/honda"
        android:layout_marginStart="25dp"
        app:layout_constraintStart_toEndOf="@id/fotoCarro"
        app:layout_constraintTop_toBottomOf="@id/motorCarro"/>

</androidx.constraintlayout.widget.ConstraintLayout>